{
  "name": "openwork-platform",
  "version": "1.0.0",
  "description": "OpenWork Platform - A comprehensive marketplace solution",
  "main": "index.js",
  "workspaces": [
    "openwork-platform/frontend/*",
    "openwork-platform/backend/*"
  ],
  "scripts": {
    "dev": "npm run start:customer",
    "start:customer": "cd openwork-platform/frontend/customer-app && npm start",
    "start:delivery": "cd openwork-platform/frontend/delivery-app/web && npm start -- --port 5174",
    "start:seller": "cd openwork-platform/frontend/seller-dashboard/web && npm start -- --port 5175",
    "start:customer-service": "cd openwork-platform/frontend/customer-service-dashboard/web && npm start -- --port 5176",
    "start:all": "concurrently -k -n customer,delivery,seller,csr -c blue,magenta,green,yellow \"npm run start:customer\" \"npm run start:delivery\" \"npm run start:seller\" \"npm run start:customer-service\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "marketplace",
    "ecommerce",
    "platform"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}